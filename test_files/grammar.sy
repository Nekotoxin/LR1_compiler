start_point
    : programs $
    ;
programs
    : decl_stmt programs
    | function programs
    | NULL
    ;
func_parameter_list
    : NULL
    | type IDENTIFIER , func_parameter_list
    | type IDENTIFIER
    ;
function
    : type IDENTIFIER ( func_parameter_list ) { stmts }
    ;
type
    : INT
    | FLOAT
    | VOID
    ;
stmts
    : NULL
    | stmts stmt
    ;
stmt
    : decl_stmt
    | assign_stmt
    | if_stmt
    | while_stmt
    | return_stmt
    | expr ;
    ;
decl_stmt
    : type IDENTIFIER ;
    | type IDENTIFIER = expr ;
    ;
assign_stmt
    : IDENTIFIER = expr ;
    ;
return_stmt
    : RETURN expr ;
    | RETURN ;
    ;
while_stmt
    : WHILE ( binary_expr ) { stmts }
    ;
if_stmt
    : IF ( binary_expr ) { stmts }
    | IF ( binary_expr ) { stmts } ELSE { stmts }
    ;
binary_expr
	: expr
	| binary_expr < expr
	| binary_expr > expr
	| binary_expr LE_OP expr
	| binary_expr GE_OP expr
	;
expr
    : item
    | item + expr
    | item - expr
    ;
item
    : factor
    | factor * factor
    | factor / factor
    ;
factor
    : I_CONSTANT
    | F_CONSTANT
    | ( expr )
    | IDENTIFIER
    | IDENTIFIER ( parameter_list )
    ;
parameter_list
    : expr
    | parameter_list , expr
    ;
