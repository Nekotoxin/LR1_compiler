start_point
    : programs $
    ;
programs
    : decl_stmt programs
    | functions
    ;
functions
    : function functions
    | function
    ;
func_parameter_list
    : NULL
    | func_parameter_list , type IDENTIFIER
    | type IDENTIFIER
    ;
function
    : type IDENTIFIER ( func_parameter_list ) stmt_block
    ;
type
    : INT
    | FLOAT
    | VOID
    ;
stmt_block
    : { stmt_string }
    ;
stmt_string
    : NULL
    | stmt_string stmt
    ;
stmt
    : decl_stmt
    | assign_stmt
    | if_stmt
    | while_stmt
    | return_stmt
    | expr ;
    ;
decl_stmt
    : type IDENTIFIER ;
    | type IDENTIFIER = expr ;
    ;
assign_stmt
    : IDENTIFIER = expr ;
    ;
return_stmt
    : RETURN expr ;
    | RETURN ;
    ;
while_stmt
    : WHILE ( expr ) stmt_block
    ;
if_stmt
    : IF ( expr ) stmt_block
    | IF ( expr ) stmt_block ELSE stmt_block
    ;
expr
    : item
    | item + expr
    | item - expr
    ;
item
    : factor
    | factor * factor
    | factor / factor
    ;
factor
    : I_CONSTANT
    | F_CONSTANT
    | ( expr )
    | IDENTIFIER
    | IDENTIFIER ( parameter_list )
    ;
parameter_list
    : expr
    | parameter_list , expr
    ;
